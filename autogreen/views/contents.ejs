<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>콘텐츠리스트</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="icofont icofont-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">콘텐츠관리</a></li>
          <li class="breadcrumb-item"><a href="#!">콘텐츠리스트</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="col-md-12">
          <select name="select" class="col-md-1 form-control form-control-inverse m-b-10 p-r-5 f-left" id="selectCompany">
            <option value='0'>CP사선택</option>
          </select>
          <button class="btn btn-warning alert-confirm f-left p-r-5 p-l-5 m-l-15 m-b-10">
            <i class="icofont icofont-download-alt"></i>EXCEL
          </button>
          <div class="col-sm-3 input-group input-group-button input-group-inverse p-l-0 p-r-0 m-b-10 f-right btn-select">
            <input id="keywordInput" type="text" class="form-control">
            <span class="input-group-addon" id="basic-addon1">
              <button id="searchBtn" class=" btn btn-inverse">검색</button>
            </span>
          </div>
          <select id="selectSearchType" name="select" class="col-sm-1 form-control form-control-inverse m-r-10 m-b-10 f-right search-select">
            <option value="t">제목</option>
            <option value="c">cp관리ID</option>
          </select>
        </div>
        <div class="col-md-12">
          <div class="card">
            <div class="card-block table-border-style">
              <table class="table table-bordered table-sm">
                <thead>
                  <tr>
                    <th width="1%">NO</th>
                    <th width="5%">CP사</th>
                    <th width="5%">CP관리ID</th>
                    <th width="15%">제목</th>
                    <th width="5%">관리현황</th>
                    <th width="5%">상태</th>
                    <th width="1%">수정</th>
                    <th width="1%">삭제</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < cList.length; i++) { %>
                  <tr>
                    <th><%= totalUser - i - data.offset %></th>
                    <td><%= cList[i].CP_name %></td>
                    <td><%= cList[i].CP_id %></td>
                    <td><%= cList[i].CP_title %></td>
                    <td>
                      <select name="select" class="col form-control form-control-inverse m-b-10 m-l-0 f-left select-left" id="selectKeyword">
                        <option value="1" <%= (cList[i].K_method == '1') ? 'selected' : '' %>>자동</option>
                        <option value="0" <%= (cList[i].K_method == '0') ? 'selected' : '' %>>수동</option>
                      </select>
                    </td>
                    <td>
                      <select name="select" class="col form-control form-control-inverse m-b-10 m-l-0 f-left select-left" id="selectKeyword">
                        <option value="1" <%= (cList[i].K_key == '1') ? 'selected' : '' %>>검출</option>
                        <option value="0" <%= (cList[i].K_key == '0') ? 'selected' : '' %>>제외</option>
                      </select>
                    </td>
                    <td class="text-center">
                      <button type="button" class="tabledit-edit-button btn btn-primary waves-effect waves-light text-center" style="inline-block;">
                        <span class="icofont icofont-ui-edit"></span>
                      </button>
                    </td>
                    <td class="text-center">
                      <button type="button" class="tabledit-delete-button btn btn-danger waves-effect waves-light alert-confirm1 text-center"  style="inline-block;">
                        <span class="icofont icofont-ui-delete"></span>
                      </button>
    								</td>
                  </tr>
                  <% }; %>
                </tbody>
                <tfoot>
                  <% if(pageCount > 1) { %>
                  <tr>
                    <td colspan="9">
                      <ul class="pagination float-right">
                        <%
                          var y = 1;
                          var searchParams = '';
                          if('searchType' in data){
                            searchParams = "&searchType="+data.searchType+"&search="+data.search;
                          }
                          if(currentPage>1) {
                            y = currentPage-1;
                            var preLink = "/contents/?page="+y+"&cpId="+data.cpId+searchParams;
                        %>
                          <li class="page-item">
                            <a class="page-link" href="<%=preLink%>" aria-label="Previous">&laquo;
                              <span aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                          </li>
                        <% } %>
                        <%
                          for (y; y <= pageCount; y++) {
                            var link = "/contents/?page="+y+"&cpId="+data.cpId+searchParams;
                        %>
                          <li class= "<%=(currentPage == y) ? 'active' : ''%> page-item">
                            <a class="page-link" href="<%=link%>"><%= y %></a>
                          </li>
                        <%
                            if(parseInt(currentPage) + 4 == y) {
                              break;
                            }
                          }
                        %>
                        <%
                          if(currentPage != pageCount) {
                            var nextLink = "/contents/?page="+Math.ceil(pageCount).toString()+"&cpId="+data.cpId+searchParams;
                          %>
                          <li class="page-item">
                            <a class="page-link" href="<%=nextLink%>" aria-label="Next">&raquo;
                              <span aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </li>
                        <% } %>
                      </ul>
                    </td>
                  </tr>
                  <% } %>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    // cp 선택 후
    var url_string = window.location.href
    var url = new URL(url_string);
    var c = url.searchParams.get("cpId");
    // cp 셀렉트 박스 옵션값 넣기
    $.ajax({
      url: '../contents/getCPList',
      type: 'post',
			datatype : 'json',
      error:function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
      },
      success:function(data){
        console.log(data);
        data.forEach(function(item){
          var html = '<option value="'+item.n_idx+'">'+item.U_name+'</option>'
          if(c == item.n_idx){
            html = '<option value="'+item.n_idx+'" selected>'+item.U_name+'</option>'
          }
          $('#selectCp').append(html);
        });
      }
    });
    // cp 변경시
    $('#selectCp').on('change',function(){
      var link = '../contents/?cpId='+$("#selectCp option:selected").val()
      var t = url.searchParams.get("searchType");
      var s = url.searchParams.get("search");
      if (t !== undefined && t != ''){
        if (s !== undefined && s != ''){
          link += '&searchType='+t+'&search='+s;
        }
      }
      location.href = link;
    });
    // 검색시
    $('#searchBtn').on('click',function(){
      if($("#keywordInput").val() == ''){
        alert('검색어를 넣어주세요.');
        return false;
      }
      location.href = '../contents/?cpId='+$("#selectCp option:selected").val()+'&searchType='+$("#selectSearchType option:selected").val()+'&search='+$("#keywordInput").val();
    })
    $('#keywordInput').on('keyup',function(event){
      if(event.keyCode == 13){
        $('#searchBtn').trigger('click');
      };
    });
  });
</script>
