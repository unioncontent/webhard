<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>콘텐츠리스트</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">콘텐츠관리</a></li>
          <li class="breadcrumb-item"><a href="#!">콘텐츠리스트</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="col-md-12">
          <select name="select" class="col-md-1 form-control form-control-inverse m-b-10 p-r-5 f-left" id="selectMCP" style="min-width: 122px;">
            <option value='0'>MCP사선택</option>
            <% for(var i=0; i < mcpList.length; i++) {%>
              <option value="<%=mcpList[i].cp_id%>"><%=mcpList[i].cp_cname%></option>
            <% }; %>
          </select>
          <select name="select" class="col-md-1 form-control form-control-inverse m-b-10 m-l-5 p-r-5 f-left" id="selectCP">
            <option value='0'>CP사선택</option>
            <% for(var i=0; i < cpList.length; i++) {%>
              <option value="<%=cpList[i].cp_id%>"><%=cpList[i].cp_cname%></option>
            <% }; %>
          </select>
          <button class="btn btn-warning alert-excel f-left p-r-5 p-l-5 m-l-15 m-b-10">
            <i class="fas fa-download"></i>EXCEL
          </button>
          <div class="col-sm-3 input-group input-group-button input-group-inverse p-l-0 p-r-0 m-b-10 f-right btn-select" style="min-width: 106px;">
            <input id="keywordInput" type="text" class="form-control">
            <span class="input-group-addon" id="searchBtn">
              <button class=" btn btn-inverse">검색</button>
            </span>
          </div>
          <select id="selectSearchType" name="select" class="col-sm-1 form-control form-control-inverse m-r-10 m-b-10 f-right search-select">
            <option value="t">제목</option>
            <option value="c">cp관리ID</option>
          </select>
        </div>
        <div class="col-md-12">
          <div class="card">
            <div class="card-block table-border-style  table-responsive">
              <div class="preloader3 loader-block">
                <div class="circ1 loader-primary"></div>
                <div class="circ2 loader-primary"></div>
                <div class="circ3 loader-primary"></div>
                <div class="circ4 loader-primary"></div>
              </div>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th width="1%">NO</th>
                    <th width="5%">CID</th>
                    <th width="5%">관리사</th>
                    <th width="5%">저작권</th>
                    <th width="15%">제목</th>
                    <th width="15%">영문제목</th>
                    <th width="5%">제작/감독</th>
                    <th width="5%">제작국가</th>
                    <th width="5%">카테고리</th>
                    <th width="5%">CPID</th>
                    <th width="5%">저작권기간</th>
                    <th width="5%">메일발송</th>
                    <th width="5%">판매금액</th>
                    <th width="5%">Hash</th>
                    <th width="5%">뮤레카</th>
                    <th width="5%">아컴</th>
                    <th width="1%">수정</th>
                    <th width="1%">삭제</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < list.length; i++) { %>
                  <tr>
                    <th><%= listCount - i - (page-1) %></th>
                    <td><%= list[i].cnt_id %></td>
                    <td><%= list[i].mcp %></td>
                    <td><%= list[i].cp %></td>
                    <td><div class="title_nobr"><%= list[i].cnt_title %></div></td>
                    <td><div class="title_nobr"><%= list[i].cnt_eng_title %></div></td>
                    <td><%= list[i].cnt_director %><br/></td>
                    <td>
                      <select name="select" class="form-control" id="selectNat" style="min-width: 78px;">
                        <%
                        var nat = list[i].cnt_nat;
                        for(var j=0; j < country.length; j++) {
                          var str = country[j].replace('\r','');
                          if(nat == null || nat == '') {
                        %>
                          <option value="-1">없음</option>
                        <% }else{%>
                          <option value="<%=str%>" <%=((str == nat )?'selected':'')%>><%=str%></option>
                        <%
                          }
                        };
                        %>
                      </select>
                    </td>
                    <td>
                      <select name="select" class="form-control" id="selectCate" style="min-width: 98px;">
                        <option value="0"<%=((null == list[i].cnt_cate  || '' == list[i].cnt_cate)?'selected':'')%>>미분류</option>
                        <option value="1"<%=(("1" == list[i].cnt_cate )?'selected':'')%>>영화</option>
                        <option value="2"<%=(("2" == list[i].cnt_cate )?'selected':'')%>>드라마</option>
                        <option value="3"<%=(("3" == list[i].cnt_cate )?'selected':'')%>>방송</option>
                        <option value="4"<%=(("4" == list[i].cnt_cate )?'selected':'')%>>음악</option>
                        <option value="5"<%=(("5" == list[i].cnt_cate )?'selected':'')%>>문서</option>
                        <option value="6"<%=(("6" == list[i].cnt_cate )?'selected':'')%>>이미지</option>
                      </select>
                    </td>
                    <td><%= list[i].cnt_cpid %></td>
                    <td><%= list[i].cnt_period %></td>
                    <td>
                      <select name="select" class="col form-control m-b-0 m-l-0 f-left select-left" id="selectMail"  style="min-width: 106px;">
                        <% if(list[i].k_mailing == null || list[i].k_mailing == '') { %>
                          <option value="-1">없음</option>
                        <% }else{%>
                          <option value="1" <%= (list[i].k_mailing == '1') ? 'selected' : '' %>>발송</option>
                          <option value="0" <%= (list[i].k_mailing == '0') ? 'selected' : '' %>>발송안함</option>
                        <% } %>
                      </select>
                    </td>
                    <td><%= list[i].cnt_price %></td>
                    <td><%= list[i].cnt_hash %></td>
                    <td><%= list[i].cnt_mureka %></td>
                    <td><%= list[i].cnt_acom %></td>
                    <td class="text-center">
                      <button type="button" data-idx = "<%= list[i].cnt_id %>" class="btn-update tabledit-edit-button btn btn-primary waves-effect waves-light text-center" style="inline-block;">
                        <span class="far fa-edit"></span>
                      </button>
                    </td>
                    <td class="text-center">
                      <button type="button" data-idx = "<%= list[i].cnt_id %>" class="btn-delete tabledit-delete-button btn btn-danger waves-effect waves-light alert-confirm1 text-center"  style="inline-block;">
                        <span class="far fa-trash-alt"></span>
                      </button>
    								</td>
                  </tr>
                  <% }; %>
                </tbody>
                <tfoot>
                  <%
                    var limit = 20;
                    var pageCount = Math.ceil(listCount / limit);
                    if(pageCount > 1) {
                  %>
                  <tr>
                    <td colspan="16">
                      <ul class="pagination float-right">
                        <%
                          var y = 1;
                          if(page > 1 && pageCount > 4) {
                            y = page-1;
                        %>
                          <li class="page-item">
                            <a class="page-link" data-value="0" data-num="1" aria-label="Previous">
                              &laquo;
                              <span aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                          </li>
                        <% } %>
                        <% for (y; y <= pageCount; y++) { %>
                          <li class= "<%=(page == y) ? 'active' : ''%> page-item">
                            <a class="page-link" data-value="<%=Math.ceil(((y - 1) * 40)).toString()%>" >
                              <%= y %>
                            </a>
                          </li>
                        <%
                            if(parseInt(page) + 3 == y) {
                              break;
                            }
                          }
                        %>
                        <% if(page != pageCount && pageCount > 4) { %>
                          <li class="page-item">
                            <a class="page-link" data-value="<%=Math.ceil(((pageCount - 1) * 40)).toString()%>" data-num="<%=pageCount%>" aria-label="Next">
                              &raquo;
                              <span aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </li>
                        <% } %>
                      </ul>
                    </td>
                  </tr>
                  <% } %>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  /* table */
  .table th,.table td{
    text-align: center;
    vertical-align: middle;
  }
  /* loader */
  .preloader3{
    display: none;
    padding-top:20%;
    position: fixed;
    left: 0;
    right: 0;
    top: 100px;
    width: 500px;
    margin: auto;
    max-width: 100%;
    z-index: 10000;
  }
  /* 글줄임 */
  .title_nobr{
    font-size: 15px;
    padding-left: 3px;
    text-overflow: ellipsis;
    width: 400px;
    overflow: hidden;
  }
</style>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert@2.1.0/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  //콘텐츠 삭제
  $(document).on('click','.btn-delete',function(){
    var trEle = $(this).closest("tr");
    var tdEle = trEle.find('td');
    var idx = $(this).data('idx');
    swal({
      title: "콘텐츠 삭제 하시겠습니까?",
      text: "\'"+tdEle.eq(3).text()+"\'"+"\n콘텐츠가 삭제 됩니다.",
      icon: "warning",
      buttons: ["취소", true],
      dangerMode: true
    })
    .then((value) =>{
      if(value != null){
        $.ajax({
          url: '/cnts/delete',
          type: 'post',
          data: {
            'n_idx': idx
          },
          error:function(request,status,error){
            alert(request.responseText);
            console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
          },
          success:function(data){
            if(data){
              reloadPage();
            }
            else{
              alert("다시시도해주세요.");
            }
          }
        });
      }
    });
  });
  function reloadPage(){
    console.log('reloadPage');
    var pageValue = ($.urlParam("page") == '') ? 1 : parseInt($.urlParam("page"));
    var param = settingParams(pageValue);
    ajaxGetPageList(param);
  }
  function ajaxGetPageList(param){
    console.log('ajaxGetPageList:',param);
    $.ajax({
      url: '/list/getNextPage',
      type: 'post',
      data: param,
      error: function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        alert('새로 고침해주세요.');
      },
      success: function(data){
        if(data.status != true){
          alert('새로 고침해주세요.');
          return false;
        }
        if(typeof history.pushState == 'function'){
          //현재 주소를 가져온다.
          var renewURL = location.href;
          //현재 주소 중 page 부분이 있다면 새로 부여될 페이지 번호를 할당한다.
          renewURL = renewURL.replace(/\?page=([0-9]+)/ig,'?page='+data.list.currentPage);
          if(renewURL.indexOf("?page=") == -1){
            renewURL += '?page='+data.list.currentPage;
          }
          //페이지 갱신 실행!
          history.pushState(null, null,renewURL);
        }

        $('#checkboxAll').prop('checked', false);
        $('#listTable tbody').empty();
        data.list.mailList.forEach(function(item,idx){
          var numIdx = Math.ceil(data.list.mailListCount-(data.list.offset+idx)).toString();
          var html = '<tr>\
            <input type="hidden" id="idx" value="'+item.n_idx+'" />\
            <td>\
              <div class="border-checkbox-section" style="max-width: 30px;">\
                <div class="border-checkbox-group border-checkbox-group-default">\
                  <input class="border-checkbox mail-checkbox" type="checkbox" id="checkbox'+idx+'">\
                  <label class="border-checkbox-label" for="checkbox'+idx+'"></label>\
                </div>\
              </div>\
            </td>\
            <th>'+numIdx+'</th>\
            <td><div class="edit">'+item.M_email+'</div></td>\
            <td>'+item.M_name+'</td>\
            <td>'+item.M_ptitle+'</td>\
            <td>'+((item.M_reporter == 0) ? '직원': (item.M_reporter == 1) ? '기자':'관계사')+'</td>\
            <td>'+((item.M_tel == null)?'':phoneFomatter(item.M_tel))+'</td>\
            <td>'+item.M_regdate+'</td>\
          </tr>'
          $('#listTable tbody').append(html);
        });
        var limit = 20;
        var pageCount = Math.ceil(data.list.mailListCount/limit);
        $('#listTable tfoot').empty();
        if(pageCount > 1) {
          var html = '<tr><td colspan="8"><ul class="pagination float-right">';
          var pageSize = 5;
          var pRCnt = parseInt(data.list.currentPage / pageSize);
          if(data.list.currentPage % pageSize == 0){
            pRCnt = parseInt(data.list.currentPage / pageSize) - 1;
          }
          if(data.list.currentPage > 5) {
            html += '<li class="page-item"><a class="page-link" data-value="1" aria-label="Previous">\
                <i class="ti-angle-double-left f-12"></i>\
                <span aria-hidden="true"></span>\
                <span class="sr-only">Previous</span>\
              </a></li>\
              <li class="page-item"><a class="page-link" data-value=\"'+(pRCnt * pageSize)+'"\ aria-label="Previous">\
                <i class="ti-angle-left f-12"></i>\
                <span aria-hidden="true"></span>\
                <span class="sr-only">Previous</span>\
              </a></li>';
          }

          for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){
            var active = (data.list.currentPage == index) ? "active" : "";
            html += '<li class=\"'+active+' page-item">\
              <a class="page-link" data-value=\"'+index+'"\ >'+index+'</a></li>'

            if(index == pageCount) {
              break;
            }
          }
          if((pRCnt + 1) * pageSize < pageCount) {
            html += '<li class="page-item">\
                  <a class="page-link" data-value=\"'+((pRCnt + 1)*pageSize+1)+'"\ aria-label="Next">\
                    <i class="ti-angle-right f-12"></i>\
                    <span aria-hidden="true"></span>\
                    <span class="sr-only">Next</span>\
                  </a></li>\
                  <li class="page-item">\
                  <a class="page-link" data-value=\"'+pageCount+'"\ aria-label="Next">\
                    <i class="ti-angle-double-right f-12"></i>\
                    <span aria-hidden="true"></span>\
                    <span class="sr-only">Next</span>\
                  </a></li>';
          }
          html += '</ul></td></tr>';
          $('#listTable tfoot').append(html);
        }
      }
    });
  }
  // 리스트 조건 세팅
  function settingParams(num){
    var param = {
      page : num
    };
    // MCP
    var keywordValue = $('#keyword').val();
    if(keywordValue != ''){
      param.keyword = keywordValue;
    }
    // CP
    var typeValue = $('#type').val();
    if(typeValue != ''){
      param.type = typeValue;
    }
    //검색
    var searchValue = $('#searchInput').val();
    if(searchValue != ''){
      param.searchType = $('#selectSearchType option:selected').val();
      param.search = searchValue;
    }
    return param;
  }
</script>
