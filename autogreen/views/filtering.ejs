<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>필터링현황</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="icofont icofont-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">필터링현황</a></li>
        </ul>
      </div>
      <div class="page-body">
        <div class="row">
        </div>
      </div>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="col-md-12">
          <select name="select" class="col-md-1 form-control form-control-inverse m-b-10 p-r-5 f-left" id="selectCp">
            <option value='0'>CP사선택</option>
          </select>
          <button class="btn btn-warning alert-confirm f-left p-r-5 p-l-5 m-l-15 m-b-10">
            <i class="icofont icofont-download-alt"></i>EXCEL
          </button>
          <div class="col-sm-3 input-group input-group-button input-group-inverse p-l-0 p-r-0 m-b-10 f-right btn-select">
            <input onkeyup="if(event.keyCode == 13){$('#searchBtn').trigger('click');};" id="keywordInput" type="text" class="form-control" placeholder="">
            <span class="input-group-addon" id="basic-addon1">
              <button id="searchBtn" class=" btn btn-inverse">검색</button>
            </span>
          </div>
          <select id="selectSearchType" name="select" class="col-sm-1 form-control form-control-inverse m-r-10 m-b-10 f-right search-select">
            <option value="i">게시물번호</option>
            <option value="c">콘텐츠ID</option>
            <option value="t">제목</option>
          </select>
        </div>
        <div class="col-md-12">
          <div class="card">
            <div class="card-block table-border-style">
              <table class="table table-bordered table-sm">
                <thead>
                  <tr>
                    <th width="1%">NO</th>
                    <th width="5%">CP사</th>
                    <th width="5%">게시물번호</th>
                    <th width="5%">콘텐츠ID</th>
                    <th width="25%">제목</th>
                    <th width="5%">금액</th>
                    <th width="10%">등록일</th>
                    <th width="10%">처리일</th>
                    <th width="5%">관리상태</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < fList.length; i++) { %>
                  <tr>
                    <th><%=totalUser - i - minusCount %></th>
                    <td><%= fList[i].cp_name %></td>
                    <td><%= fList[i].osp_idx %></td>
                    <td><%= fList[i].cnt_id %></td>
                    <td><%= fList[i].title %></td>
                    <td><%= fList[i].price %></th>
                    <td><%= moment(fList[i].createDate).format('YYYY-MM-DD hh:mm:ss') %></td>
                    <td><%= moment(fList[i].csDate).format('YYYY-MM-DD hh:mm:ss') %></td>
                    <td><%= (fList[i].k_method == '1') ? 'A' : 'M' %> - <%= (fList[i].k_apply == 'D') ? '삭제' : (fList[i].k_apply == 'T') ? '제휴' : '보류' %></td>
                  </tr>
                  <% }; %>
                </tbody>
                <tfoot>
                  <% if(pageCount > 1) { %>
                  <tr>
                    <td colspan="9">
                      <ul class="pagination float-right">
                        <%
                          var y = 1;
                          if(currentPage>1) {
                            y = currentPage-1;
                        %>
                          <li class="page-item">
                            <a class="page-link" href="/user/?page=<%= y %>&cpId=<%=cpId%>" aria-label="Previous">&laquo;
                              <span aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                          </li>
                        <% } %>
                        <%
                          for (y; y <= pageCount; y++) {
                        %>
                          <li class= "<%=(currentPage == y) ? 'active' : ''%> page-item">
                            <a class="page-link" href="/filtering/?page=<%= y %>&cpId=<%=cpId%>"><%= y %></a>
                          </li>
                        <%
                            if(parseInt(currentPage) + 4 == y) {
                              break;
                            }
                          }
                        %>
                        <% if(currentPage != pageCount) { %>
                          <li class="page-item">
                            <a class="page-link" href="/filtering/?page=<%= Math.ceil(pageCount) %>&cpId=<%=cpId%>" aria-label="Next">&raquo;
                              <span aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </li>
                        <% } %>
                      </ul>
                    </td>
                  </tr>
                  <% } %>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    // cp 선택 후
    var url_string = window.location.href
    var url = new URL(url_string);
    var c = url.searchParams.get("cpId");
    // cp 셀렉트 박스 옵션값 넣기
    $.ajax({
      url: '../filtering/getCPList',
      type: 'post',
			datatype : 'json',
      error:function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
      },
      success:function(data){
        console.log(data);
        data.forEach(function(item){
          var html = '<option value="'+item.n_idx+'">'+item.U_name+'</option>'
          if(c == item.n_idx){
            html = '<option value="'+item.n_idx+'" selected>'+item.U_name+'</option>'
          }
          $('#selectCp').append(html);
        });
      }
    });
    $('#selectCp').on('change',function(){
      location.href = '../filtering/?cpId='+$("#selectCp option:selected").val();
    });
  });
</script>
