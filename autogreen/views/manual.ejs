  //     alert("다시시도해주세요.");
  //     console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
  //   },
  //   success:function(data){
  //     if(data){
  //       check = true;
  //     }
  //     else{
  //       alert("다시시도해주세요.");
  //     }
  //   }
  // });
  check = true;
  if(check){
    $.ajax({
      url: '../manual/update',
      type: 'post',
      data: {
        'OSP_idx': eles.eq(3).text()
      },
      error:function(request,status,error){
        alert("다시시도해주세요.");
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
      },
