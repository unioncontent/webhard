<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>수동처리</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="../dashBoard/dashBoard">
              <i class="icofont icofont-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">수동처리</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="col-md-12">
          <select name="select" class="col-md-1 form-control form-control-inverse m-b-10 p-r-5 f-left" id="selectCp">
            <option value='0'>CP사선택</option>
          </select>
          <select name="select" class="col-md-1 form-control form-control-inverse m-b-10 p-r-5 f-left select-left" id="selectKeyword">
            <option value="a">전체</option>
            <option value="P">보류</option>
            <option value="T">제휴</option>
            <option value="D">삭제</option>
          </select>
          <div class="col-sm-3 input-group input-group-button input-group-inverse p-l-0 p-r-0 m-b-10 f-right btn-select">
            <input id="keywordInput" type="text" class="form-control" placeholder="">
            <span class="input-group-addon" id="basic-addon1">
              <button id="searchBtn" class=" btn btn-inverse">검색</button>
            </span>
          </div>
          <select id="selectSearchType" name="select" class="col-sm-1 form-control form-control-inverse m-r-10 m-b-10 f-right search-select">
            <option value="t">제목</option>
            <option value="i">콘텐츠ID</option>
            <option value="c">게시글번호</option>
            <option value="k">키워드</option>
          </select>
        </div>
        <div class="col-md-12">
          <div class="card">
            <div class="card-block table-border-style">
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th width="1%">NO</th>
                      <th width="5%">CP사</th>
                      <th width="5%">콘텐츠ID</th>
                      <th width="15%">제목</th>
                      <th width="5%">게시물번호</th>
                      <th width="5%">금액</th>
                      <th width="5%">키워드</th>
                      <th width="5%">상태</th>
                      <th width="5%">관리상태</th>
                      <th width="10%">수정</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0; i < mList.length; i++) { %>
                    <tr>
                      <th><%= totalUser - i - data.offset %></th>
                      <td><%= mList[i].cp_name %></td>
                      <td><div class="cntId_nobr"><%= mList[i].CP_CntID %></div></td>
                      <td><div class="title_nobr"><%= mList[i].title %></div></td>
                      <td><%= mList[i].OSP_idx %></td>
                      <td><%= mList[i].OSP_price %></td>
                      <td><div class="keyword_nobr"><%= mList[i].K_keyword %></div></td>
                      <td>비제휴</td>
                      <td>
                        <select name="select" class="selectApply m-l-0 form-control form-control-inverse select-left">
                          <option value="P">보류</option>
                          <option value="T">제휴</option>
                          <option value="D">삭제</option>
                        </select>
                      </td>
                      <td class="text-center">
      								  <div class="btn-group btn-group-md text-center" style="padding-right: 0; display: inline-block;">
                          <button type="button" class="btn-delete btn btn-danger waves-effect waves-light alert-confirm1" style="margin-right: 5px;">
          								  <span class="icofont icofont-ui-delete"></span>
          								</button>
        							    <button type="button" class="btn-update btn btn-primary waves-effect waves-light" >
          								  <span class="icofont icofont-ui-edit"></span>
          								</button>
      								  </div>
      								</td>
                    </tr>
                    <% }; %>
                  </tbody>
                  <tfoot>
                    <% if(pageCount > 1) { %>
                    <tr>
                      <td colspan="10">
                        <ul class="pagination float-right">
                          <%
                            var y = 1;
                            var searchParams = '';
                            if('searchType' in data){
                              searchParams = "&searchType="+data.searchType+"&search="+data.search;
                            }
                            if(currentPage>1) {
                              y = currentPage-1;
                              var preLink = "/manual/?page=1&cp_name="+data.cp_name+searchParams;
                          %>
                            <li class="page-item">
                              <a class="page-link" href="<%=preLink%>" aria-label="Previous">&laquo;
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <%
                            for (y; y <= pageCount; y++) {
                              var link = "/manual/?page="+y+"&cp_name="+data.cp_name+searchParams;
                          %>
                            <li class= "<%=(currentPage == y) ? 'active' : ''%> page-item">
                              <a class="page-link" href="<%=link%>"><%= y %></a>
                            </li>
                          <%
                              if(parseInt(currentPage) + 4 == y) {
                                break;
                              }
                            }
                          %>
                          <%
                            if(currentPage != pageCount) {
                              var nextLink = "/manual/?page="+Math.ceil(pageCount).toString()+"&cp_name="+data.cp_name+searchParams;
                            %>
                            <li class="page-item">
                              <a class="page-link" href="<%=nextLink%>" aria-label="Next">&raquo;
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    </tr>
                    <% } %>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style type="text/css">
.cntId_nobr,.keyword_nobr,.title_nobr{
  font-size: 15px;
  padding-left: 3px;
  text-overflow: ellipsis;
  width: 100px;
  overflow: hidden;
}
.title_nobr{
  width: 400px;
}
.keyword_nobr{
  width: 100px;
}
</style>
<script type="text/javascript">
// cp 선택 후
var url_string = window.location.href
var url = new URL(url_string);
var c = url.searchParams.get("cpId");
$(document).ready(function(){
  // cp 셀렉트 박스 옵션값 넣기
  $.ajax({
    url: '../manual/getCPList',
    type: 'post',
    datatype : 'json',
    error:function(request,status,error){
      console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
    },
    success:function(data){
      console.log(data);
      data.forEach(function(item){
        var html = '<option value="'+item.U_name+'">'+item.U_name+'</option>'
        if(c == item.U_name){
          html = '<option value="'+item.U_name+'" selected>'+item.U_name+'</option>'
        }
        $('#selectCp').append(html);
      });
    }
  });
});
// cp 변경시
$('#selectCp').on('change',function(){
  var link = '../manual/?cp_name='+$("#selectCp option:selected").val()
  var t = url.searchParams.get("searchType");
  var s = url.searchParams.get("search");
  if (t !== undefined && t != ''){
    if (s !== undefined && s != ''){
      link += '&searchType='+t+'&search='+s;
    }
  }
  location.href = link;
});
// 검색시
$('#searchBtn').on('click',function(){
  if($("#keywordInput").val() == ''){
    alert('검색어를 넣어주세요.');
    return false;
  }
  location.href = '../manual/?cp_name='+$("#selectCp option:selected").val()+'&searchType='+$("#selectSearchType option:selected").val()+'&search='+$("#keywordInput").val();
})
$('#keywordInput').on('keyup',function(event){
  if(event.keyCode == 13){
    $('#searchBtn').trigger('click');
  };
});
//삭제버튼 클릭시
$(document).on('click','.btn-delete',function(){
  var trEle = $(this).closest("tr");
  var eles = trEle.find('td');
  $.ajax({
    url: '../manual/delete',
    type: 'post',
    data: {
      'OSP_idx': eles.eq(3).text()
    },
    error:function(request,status,error){
      alert("다시시도해주세요.");
      console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
    },
    success:function(data){
      if(data){
        trEle.remove();
      }
      else{
        alert("다시시도해주세요.");
      }
    }
  });
});
//수정버튼 클릭시
