<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4><%=(pType == 'nalliance')?'비제휴사현황':'제휴사현황'%></h4>
        <input type="hidden" value="<%=pType%>" id="pType"/>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">모니터링현황</a></li>
          <li class="breadcrumb-item"><a href="#!"><%=(pType == 'nalliance')?'비제휴사현황':'제휴사현황'%></a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="p-9">
          <div class="card">
            <div class="card-type-1 card-type-w1">
              <div class="div-chart">
                <div class="charts_title">
                  PC 모니터링
                </div>
                <div class="charts">
                  <div class="charts__chart chart--p100 chart--lg">
                    <div class="charts__chart chart--p0 chart_point1 f-left"></div>
                    <div class="charts__chart chart--p0 chart_point2 f-left"></div>
                    <div class="charts__chart chart--p0 chart_point3 f-left"></div>
                    <div class="charts__chart chart--p0 chart_point4 f-left"></div>
                  </div>
                </div>
                <div class="charts_legend_group">
                  <div class="chart_legend"><div class="chart_point chart_point4"></div><span class="chart_name">비제휴잔류건 <span class="percent-r">0</span>%</span></div>
                  <div class="chart_legend"><div class="chart_point chart_point3"></div><span class="chart_name">삭제건 <span class="percent-r">0</span>%</span></div>
                  <div class="chart_legend"><div class="chart_point chart_point2"></div><span class="chart_name">제휴전환건 <span class="percent-r">0</span>%</span></div>
                  <div class="chart_legend"><div class="chart_point chart_point1"></div><span class="chart_name">제휴검출건 <span class="percent-r">0</span>%</span></div>
                </div>
              </div>
              <div class="div-chart m-t-30">
                <div class="charts_title">
                  모바일 모니터링
                </div>
                <div class="charts">
                  <div class="charts__chart chart--p100 chart--lg">
                    <div class="charts__chart chart--p0 chart_point1 f-left"></div>
                    <div class="charts__chart chart--p0 chart_point2 f-left"></div>
                    <div class="charts__chart chart--p0 chart_point3 f-left"></div>
                    <div class="charts__chart chart--p0 chart_point4 f-left"></div>
                  </div>
                </div>
                <div class="charts_legend_group">
                  <div class="chart_legend"><div class="chart_point chart_point4"></div><span class="chart_name">비제휴잔류건 <span class="percent-r">0</span>%</span></div>
                  <div class="chart_legend"><div class="chart_point chart_point3"></div><span class="chart_name">삭제건 <span class="percent-r">0</span>%</span></div>
                  <div class="chart_legend"><div class="chart_point chart_point2"></div><span class="chart_name">제휴전환건 <span class="percent-r">0</span>%</span></div>
                  <div class="chart_legend"><div class="chart_point chart_point1"></div><span class="chart_name">제휴검출건 <span class="percent-r">0</span>%</span></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="p-9 p-l-0">
          <div class="card">
            <div class="card-type-1 card-type-w2">
              <table class="table" id="totalTable">
                <thead>
                  <tr>
                    <th width="150px">관리방법</th>
                    <th width="104px">총 검출건</th>
                    <th width="104px">PC</th>
                    <th width="104px">모바일</th>
                  </tr>
                </thead>
                <tbody>
                <tr>
                  <th>전체검출건</th>
                  <td id="totalTable-td1">0</td>
                  <td id="totalTable-p1">0</td>
                  <td id="totalTable-m1">0</td>
                </tr>
                <tr>
                  <th>전체제휴건</th>
                  <td id="totalTable-td2">0</td>
                  <td id="totalTable-p2">0</td>
                  <td id="totalTable-m2">0</td>
                </tr>
                <tr>
                  <th>전체비제휴건</th>
                  <td id="totalTable-td3">0</td>
                  <td id="totalTable-p3">0</td>
                  <td id="totalTable-m3">0</td>
                </tr>
                <tr>
                  <th><span class="card-span">└ 제휴전환건</span></th>
                  <td id="totalTable-td4">0</td>
                  <td id="totalTable-p4">0</td>
                  <td id="totalTable-m4">0</td>
                </tr>
                <tr>
                  <th><span class="card-span">└ 삭제건</span></th>
                  <td id="totalTable-td5">0</td>
                  <td id="totalTable-p5">0</td>
                  <td id="totalTable-m5">0</td>
                </tr>
                <tr>
                  <th><span class="card-span">└ 비제휴잔류</span></th>
                  <td id="totalTable-td6">0</td>
                  <td id="totalTable-p6">0</td>
                  <td id="totalTable-m6">0</td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-xs-12 m-b-10">
          <button class="btn btn-default btn-excel f-left p-r-5 p-l-5">
            <i class="far fa-file-excel"></i>EXCEL
          </button>
          <button class="btn btn-default btn-image f-left p-r-5 p-l-5 m-l-15">
            <i class="far fa-file-image"></i>이미지
          </button>
          <button class="btn btn-default f-left p-r-5 p-l-5 m-l-15">
            <i class="far fa-file-video"></i>채증
          </button>
          <div id="reportrange" class="col-xs-2 form-control form-control-inverse f-right">
            <i class="glyphicon glyphicon-calendar far fa-calendar-alt"></i>
            <span></span>
            <i class="f-right fa fa-angle-down" style="font-size: 17px;"></i>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="card">
            <div class="card-header">
              <input type="hidden" id="user_class" value="<%=userCLASS%>">
              <input type="hidden" id="user_id" value="<%=userID%>">
              <% if(userCLASS == 'a'){ %>
              <select name="select" class="col-xs-1 form-control form-control-inverse p-r-5 f-left" id="selectMCP" style="min-width: 122px;">
                <option value=''>MCP사선택</option>
                <% for(var i=0; i < mcpList.length; i++) {%>
                  <option value="<%=mcpList[i].cp_id%>"><%=mcpList[i].cp_cname%></option>
                <% }; %>
              </select>
              <% } %>
              <% if(userCLASS != 'c'){ %>
              <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectCP">
                <option value=''>CP사선택</option>
                <%
                  for(var i=0; i < cpList.length; i++) {%>
                    <option value="<%=cpList[i].cp_id%>"><%=cpList[i].cp_cname%></option>
                <% } %>
              </select>
              <% } %>
              <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectOSP" style="min-width: 115px;">
                <option value=''>OSP사선택</option>
                <% for(var i=0; i < ospList.length; i++) {%>
                  <option value="<%=ospList[i].osp_id%>"><%=ospList[i].osp_sname%></option>
                <% } %>
              </select>
              <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectState">
                <option value=''>상태선택</option>
                <option value='1'>제휴</option>
                <option value='0'>비제휴</option>
              </select>
              <div class="col-12 col-xs-3 f-right col-xs-9 m-l-10 p-l-0 p-r-0 right-icon-control">
                <input type="text" class="form-control p-t-10 form-control-inverse search-text" id="searchInput">
                <div class="form-icon" id="searchBtn">
                  <i class="fas fa-search"></i>
                </div>
              </div>
              <select id="selectSearchType" name="select" class="col-xs-1 form-control form-control-inverse m-r-10 f-right search-select">
                <option value="t">제목</option>
                <option value="c">콘텐츠ID</option>
                <option value="n">게시물번호</option>
                <option value="k">키워드</option>
              </select>
              <% if(userID == 'union_admin'){ %>
                <div class="col-xs-3 p-l-10 p-t-5 m-b-10 f-left border-checkbox-section checkbox-news">
                  <div class="border-checkbox-group border-checkbox-group-default m-r-5">
                    <input class="border-checkbox" type="checkbox" id="searchBtn1" name="search" value="게시물삭제">
                    <label class="border-checkbox-label" for="searchBtn1">게시물삭제</label>
                  </div>
                </div>
              <%}%>
            </div>
            <div class="card-block table-border-style  table-responsive">
              <div class="preloader3 loader-block">
                <div class="circ1 loader-primary"></div>
                <div class="circ2 loader-primary"></div>
                <div class="circ3 loader-primary"></div>
                <div class="circ4 loader-primary"></div>
              </div>
              <table class="table" id="listTable">
                <thead>
                  <tr>
                    <th width="1%">NO</th>
                    <th width="5%">OSP</th>
                    <th width="5%">MCP/CP</th>
                    <th width="5%">콘텐츠 제목</th>
                    <th width="5%">키워드</th>
                    <th width="15%">제목</th>
                    <th width="5%">판매금액</th>
                    <th width="5%">판매자</th>
                    <th width="5%">검출일</th>
                    <th width="5%">동영상채증</th>
                    <th width="5%">관리상태</th>
                    <th width="1%">삭제</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < list.length; i++) { %>
                    <tr>
                      <th><%= listCount - i - offset %></th>
                      <td><%= list[i].osp_sname %></td>
                      <td><%= list[i].cnt_mcp+'/'+list[i].cnt_cp %></td>
                      <td><div class="reduction"><%= list[i].cnt_title %></div></td>
                      <td><div class="reduction"><%= list[i].k_title %></div></td>
                      <td class="info-td">
                        <% if(list[i]['cnt_img_1'] != '' && list[i]['cnt_img_1'] != null && list[i]['cnt_chk_1'] == '0' && list[i]['cnt_img_1'] !='/untitled.jpg'){ %>
                        <i class="fas fa-image text-muted"></i>
                        <%}%>
                        <div class="info" data-idx="<%= list[i].n_idx %>" ><%= list[i].title %></div>
                      </td>
                      <td><%= list[i].cnt_price %></td>
                      <td><%= list[i].cnt_writer %></td>
                      <td>
                        <div class="dateArr">
                          <%
                          for(var j=1; j < 4; j++){
                            if(list[i]['cnt_img_'+j] != '' && list[i]['cnt_img_'+j] != null && list[i]['cnt_img_'+j] != undefined){
                              if(list[i]['cnt_img_'+j] !='/untitled.jpg' && list[i]['cnt_chk_'+j] !='2'){
                                %>
                                <%= j+' 차 : '+list[i]['cnt_date_'+j] %>
                                <%
                              } else {
                                %>
                                <%= '게시물 삭제됨' %>
                                <%
                                break;
                              }
                          %>
                                <% if (j < 3){ %>
                                <br />
                              <%
                                }
                              }
                              else if(j == 1){
                                %>
                                <%= j+' 차 : '+list[i]['cnt_date_'+j] %>
                                </br>
                                <%
                              }
                            }
                          %>
                        </div>
                      </td>
                      <td>
                        <button type="button" class="btn btn-primary icon-btn waves-effect waves-light text-center">
                          <i class="fas fa-download"></i>
                        </button>
                      </td>
                      <td>채증</td>
                      <td>
                        <button type="button" data-idx="<%= list[i].n_idx %>" data-url="<%= list[i].url %>" class="btn-delete btn icon-btn btn-danger waves-effect waves-light text-center">
                          <i class="far fa-trash-alt"></i>
                        </button>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
                <tfoot>
                  <%
                    var limit = 20;
                    var pageCount = Math.ceil(listCount/limit);
                    if(pageCount > 1) {
                    %>
                    <tr class="footable-paging">
                      <td colspan="12">
                        <ul class="pagination">
                          <%
                            var pageSize = 5;
                            var pRCnt = parseInt(page / pageSize);
                            if(page % pageSize == 0){
                              pRCnt = parseInt(page / pageSize) - 1;
                            }
                            if(page > 5) {
                          %>
                            <li class="page-item">
                              <a class="page-link" data-value="1" aria-label="Previous">
                                <i class="ti-angle-double-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                                <i class="ti-angle-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                            <li class= "<%=(page == index) ? 'active' : ''%> page-item">
                              <a class="page-link" data-value="<%=index%>" >
                                <%= index %>
                              </a>
                            </li>
                          <%
                              if(index == pageCount) {
                                break;
                              }
                            }
                          %>
                          <% if((pRCnt + 1) * pageSize < pageCount) { %>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                                <i class="ti-angle-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                                <i class="ti-angle-double-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    </tr>
                    <% } %>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal start-->
      <div class='modal fade' id='info-Modal' aria-hidden="true" tabindex="-1" role="dialog">
        <div class='modal-dialog modal-xlg' role='document'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h5 class="modal-title">게시물 정보</h5>
              <button type="button" class="close modal-close">
                <span aria-hidden="true"><i class="ti-close"></i></span>
              </button>
            </div>
            <div class='modal-body'>
              <div class="col-xs-12 m-b-10">
                <div class="row related-artical" id="img-list">
                </div>
              </div>
              <div class='card'>
                <div class="card-block table-border-style">
                  <div class="table-responsive">
                    <table class="table" id='modal-cnt'>
                      <colgroup>
                        <col width="30%" />
                        <col width="70%" />
                      </colgroup>
                      <tbody>
                        <tr>
                          <th>게시물번호</th>
                          <td><p id="cnt_num"></p></td>
                        </tr>
                        <tr>
                          <th>OSP</th>
                          <td><p id="osp_sname"></p></td>
                        </tr>
                        <tr>
                          <th>콘텐츠제목</th>
                          <td><p id="cnt_title"></p></td>
                        </tr>
                        <tr>
                          <th>제목</th>
                          <td><p id="title"></p></td>
                        </tr>
                        <tr>
                          <th>판매금액</th>
                          <td><p id="cnt_price"></p></td>
                        </tr>
                        <tr>
                          <th>작성자</th>
                          <td><p id="cnt_writer"></p></td>
                        </tr>
                        <tr>
                          <th>용량</th>
                          <td><p id="cnt_vol"></p></td>
                        </tr>
                        <tr>
                          <th>카테고리</th>
                          <td><p id="cnt_cate"></p></td>
                        </tr>
                        <tr>
                          <th>파일명</th>
                          <td><p id="cnt_fname"></p></td>
                        </tr>
                        <tr>
                          <th>mcp</th>
                          <td><p id="cnt_mcp"></p></td>
                        </tr>
                        <tr>
                          <th>cp</th>
                          <td><p id="cnt_cp"></p></td>
                        </tr>
                        <tr>
                          <th>키워드</th>
                          <td><p id="k_title"></p></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <!-- <button class="btn-update btn btn-warning m-b-0" data-idx="" type="button">수정</button> -->
              <button class="btn btn-secondary modal-close" type="button">취소</button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal end-->
    </div>
  </div>
</div>
