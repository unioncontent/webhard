<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>모니터링업무</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">모니터링업무</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="col-xs-8" id="resultList">
          <div class="card" style="border-top: 1px solid black;">
            <div class="card-header">
              <div class="col-xs-12" style="height: 43px;padding: 0;">
                <input type="hidden" id="user_class" value="<%=userCLASS%>">
                <input type="hidden" id="user_id" value="<%=userID%>">
                <% if(userCLASS == 'a'){ %>
                <select name="select" class="col-xs-1 form-control form-control-inverse p-r-5 f-left" id="selectMCP" style="min-width: 95px;">
                  <option value=''>MCP사선택</option>
                  <% for(var i=0; i < mcpList.length; i++) {%>
                    <option value="<%=mcpList[i].cp_id%>"><%=mcpList[i].cp_cname%></option>
                  <% }; %>
                </select>
                <% } %>
                <% if(userCLASS != 'c'){ %>
                <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectCP" style="min-width: 85px;">
                  <option value=''>CP사선택</option>
                  <% for(var i=0; i < cpList.length; i++) {%>
                      <option value="<%=cpList[i].cp_id%>"><%=cpList[i].cp_cname%></option>
                  <% } %>
                </select>
                <% } %>
                <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectOState" style="min-width: 106px;">
                  <option value='2'>제휴상태선택</option>
                  <option value='1'>제휴사</option>
                  <option value='0'>비제휴사</option>
                </select>
                <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectOSP" style="min-width: 94px;">
                  <option value=''>OSP사선택</option>
                  <% for(var i=0; i < ospList.length; i++) {%>
                    <option value="<%=ospList[i].osp_id%>"><%=ospList[i].osp_sname%></option>
                  <% } %>
                </select>
                <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectState" style="min-width: 77px;">
                  <option value="">상태선택</option>
                  <option value="1">제휴</option>
                  <option value="0">비제휴</option>
                </select>
                <select name="select" class="col-xs-1 form-control form-control-inverse m-l-5 p-r-5 f-left" id="selectType" style="min-width: 70px;max-width: 70px;">
                  <option value="">PC</option>
                  <option value="m">모바일</option>
                </select>
                <div id="reportrange" class="col-xs-2 form-control form-control-inverse f-right" style="min-width: 233px;border-radius: 0px;">
                  <i class="glyphicon glyphicon-calendar far fa-calendar-alt f-left" style="padding-top: 2px;"></i>
                  <span style="display: inline;font-size: 12px;padding-left: 5px;"></span>
                  <i class="f-right fa fa-angle-down" style="font-size: 17px;"></i>
                </div>
              </div>
              <div class="col-xs-12" style="padding: 0;">
                <button class="btn btn-sm btn-warning btn-check btn-square f-left p-r-10 p-l-10" style="height: 38px;">검토확인</button>
                <button class="btn btn-sm btn-danger btn-delete btn-square f-right m-l-5 p-r-10 p-l-10" style="height: 38px;">일괄처리</button>
                <div class="col-xs-3 f-right p-l-0 p-r-0 right-icon-control">
                  <input type="text" class="form-control p-t-10 form-control-inverse search-text" id="searchInput">
                  <div class="form-icon" id="searchBtn">
                    <i class="fas fa-search"></i>
                  </div>
                </div>
                <select id="selectSearchType" name="select" class="col-xs-1 form-control form-control-inverse m-r-5 f-right search-select">
                  <option value="t">제목</option>
                  <option value="c">콘텐츠ID</option>
                  <option value="n">게시물번호</option>
                  <option value="k">키워드</option>
                </select>
              </div>
            </div>
            <div class="card-block table-border-style  table-responsive">
              <div class="preloader3 loader-block">
                <div class="circ1 loader-primary"></div>
                <div class="circ2 loader-primary"></div>
                <div class="circ3 loader-primary"></div>
                <div class="circ4 loader-primary"></div>
              </div>
              <table class="table" id="listTable">
                <thead>
                  <tr>
                    <th width="1%">
                      <div class="border-checkbox-section">
                        <div class="border-checkbox-group border-checkbox-group-default"  style="max-height: 25px;">
                          <input class="border-checkbox" type="checkbox" id="checkboxAll-1">
                          <label class="border-checkbox-label" for="checkboxAll-1"></label>
                        </div>
                      </div>
                    </th>
                    <th width="1%">NO</th>
                    <th width="5%">OSP</th>
                    <!-- <th width="5%">MCP/CP</th> -->
                    <th width="5%">콘텐츠 제목</th>
                    <th width="15%">제목</th>
                    <th width="5%">판매금액</th>
                    <th width="5%">판매자</th>
                    <th width="5%">검출일</th>
                    <th width="5%">분류</th>
                    <th width="1%">
                      <!-- <span class="checkbox-span">삭제</span> -->
                      <div class="border-checkbox-section">
                        <div class="border-checkbox-group border-checkbox-group-default"  style="max-height: 25px;">
                          <input class="border-checkbox" type="checkbox" id="checkboxAll">
                          <label class="border-checkbox-label" for="checkboxAll"></label>
                        </div>
                      </div>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < list.length; i++) { %>
                    <tr>
                      <td>
                        <div class="border-checkbox-section">
                          <div class="border-checkbox-group border-checkbox-group-default" style="max-height: 25px;">
                            <input type="hidden" id="idx" value="<%=list[i].n_idx%>">
                            <input type="hidden" id="url" value="<%=list[i].cnt_url%>">
                            <input class="border-checkbox list-checkbox-1" type="checkbox" id="checkbox<%=i%>-1">
                            <label class="border-checkbox-label" for="checkbox<%=i%>-1"></label>
                          </div>
                        </div>
                      </td>
                      <td><%= listCount - i - offset %></td>
                      <td><%=list[i].osp_sname%></td>
                      <!-- <td><%= list[i].cnt_mcp+'/'%><br><%=list[i].cnt_cp %></td> -->
                      <td><div class="reduction"><%= list[i].ctitle %></div></td>
                      <td class="info-td">
                        <% if(list[i]['cnt_img_1'] != '' && list[i]['cnt_img_1'] != null && list[i]['cnt_chk_1'] == '0' && list[i]['cnt_img_1'] !='/untitled.jpg'){ %>
                        <i class="fas fa-image text-muted"></i>
                        <%}%>
                        <div class="info-open" data-cidx="<%= list[i].cidx %>" data-idx="<%= list[i].n_idx %>" ><%= list[i].cnt_title %></div>
                        <td><%= list[i].cnt_price %></td>
                        <td><div class="writer"><%= list[i].cnt_writer %></div></td>
                      <td>
                        <div class="dateArr">
                          <%
                          for(var j=1; j < 4; j++){
                            if(list[i]['cnt_img_'+j] != '' && list[i]['cnt_img_'+j] != null && list[i]['cnt_img_'+j] != undefined){
                              if(list[i]['cnt_img_'+j] !='/untitled.jpg' && list[i]['cnt_chk_'+j] !='2'){
                                %>
                                <%= j+' 차 : '+list[i]['cnt_date_'+j] %>
                                <%
                              } else if (list[i]['cnt_img_'+j] == '/untitled.jpg' || list[i]['cnt_chk_'+j] == '2') {
                                %>
                                <%= '게시물 삭제됨' %>
                                <%
                                break;
                              }
                          %>
                                <% if (j < 3){ %>
                                <br />
                              <%
                                }
                              }
                              else if(j == 1){
                                %>
                                <%= j+' 차 : '+list[i]['cnt_date_'+j] %>
                                </br>
                                <%
                              }
                            }
                          %>
                        </div>
                      </td>
                      <td>
                        <div class="ss-group">
                          <span>1차 :</span>
                          <select name="select" data-type="1" data-origin="<%= list[i]['cnt_chk_1'] %>" data-idx="<%= list[i].n_idx %>" class="col-xs-1 form-control table-select">
                            <option value="" <%=(list[i]['cnt_chk_1'] == '')?'selected':''%>>-</option>
                            <option value="1" <%=(list[i]['cnt_chk_1'] == '1')?'selected':''%>>제휴</option>
                            <option value="0" <%=(list[i]['cnt_chk_1'] == '0')?'selected':''%>>비제휴</option>
                            <option value="2" <%=(list[i]['cnt_chk_1'] == '2')?'selected':''%>>삭제</option>
                          </select>
                        </div>
                        <div class="ss-group">
                          <span>2차 :</span>
                          <select name="select" data-type="2" data-origin="<%= list[i]['cnt_chk_2'] %>" data-idx="<%= list[i].n_idx %>" class="col-xs-1 form-control table-select m-t-5">
                            <option value="" <%=(list[i]['cnt_chk_2'] == '')?'selected':''%>>-</option>
                            <option value="1" <%=(list[i]['cnt_chk_2'] == '1')?'selected':''%>>제휴</option>
                            <option value="0" <%=(list[i]['cnt_chk_2'] == '0')?'selected':''%>>비제휴</option>
                            <option value="2" <%=(list[i]['cnt_chk_2'] == '2')?'selected':''%>>삭제</option>
                          </select>
                        </div>
                        <div class="ss-group">
                          <span>3차 :</span>
                          <select name="select" data-type="3" data-origin="<%= list[i]['cnt_chk_3'] %>" data-idx="<%= list[i].n_idx %>" class="col-xs-1 form-control table-select m-t-5">
                            <option value="" <%=(list[i]['cnt_chk_3'] == '')?'selected':''%>>-</option>
                            <option value="1" <%=(list[i]['cnt_chk_3'] == '1')?'selected':''%>>제휴</option>
                            <option value="0" <%=(list[i]['cnt_chk_3'] == '0')?'selected':''%>>비제휴</option>
                            <option value="2" <%=(list[i]['cnt_chk_3'] == '2')?'selected':''%>>삭제</option>
                          </select>
                        </div>
                      </td>
                      <td>
                        <div class="border-checkbox-section">
                          <div class="border-checkbox-group border-checkbox-group-default" style="max-height: 25px;">
                            <input type="hidden" id="idx" value="<%=list[i].n_idx%>">
                            <input type="hidden" id="url" value="<%=list[i].cnt_url%>">
                            <input class="border-checkbox list-checkbox" type="checkbox" id="checkbox<%=i%>">
                            <label class="border-checkbox-label" for="checkbox<%=i%>"></label>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
                <tfoot>
                  <tr class="footable-paging">
                    <td colspan="11">
                      <button class="btn btn-sm btn-warning btn-check btn-bottom btn-bottom-1 btn-square p-r-10 p-l-10">검토확인</button>
                      <ul class="pagination">
                      <%
                        var limit = 20;
                        var pageCount = Math.ceil(listCount/limit);
                        if(pageCount > 1) {
                          var pageSize = 5;
                          var pRCnt = parseInt(page / pageSize);
                          if(page % pageSize == 0){
                            pRCnt = parseInt(page / pageSize) - 1;
                          }
                          if(page > 5) {
                        %>
                        <li class="page-item">
                          <a class="page-link" data-value="1" aria-label="Previous">
                            <i class="ti-angle-double-left f-12"></i>
                            <span aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                        </li>
                        <li class="page-item">
                          <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                            <i class="ti-angle-left f-12"></i>
                            <span aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                        </li>
                      <% } %>
                      <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                        <li class= "<%=(page == index) ? 'active' : ''%> page-item">
                          <a class="page-link" data-value="<%=index%>" >
                            <%= index %>
                          </a>
                        </li>
                      <%
                          if(index == pageCount) {
                            break;
                          }
                        }
                      %>
                      <% if((pRCnt + 1) * pageSize < pageCount) { %>
                        <li class="page-item">
                          <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                            <i class="ti-angle-right f-12"></i>
                            <span aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </li>
                        <li class="page-item">
                          <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                            <i class="ti-angle-double-right f-12"></i>
                            <span aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </li>
                      <% } }%>
                      </ul>
                      <button class="btn btn-sm btn-warning btn-danger btn-delete btn-bottom btn-square p-r-10 p-l-10">일괄처리</button>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
        <div class="col-xs-4 col-right" id="resultDetail">
          <div class="col-xs-12" style="padding-bottom: 0;">
            <div class="row related-artical" id="img-list">
              <div class="col-img-item">
                <div class="articles context-menu-one" data-num="1" data-idx="">
                  <a title="untitled.jpg" data-lightbox="image-1" rel="group1" href="http://61.82.113.197:3000/monitoring_img/untitled.jpg">
                    <img class="img-fluid c-pointer lightbox-img" src="http://61.82.113.197:3000/monitoring_img/untitled.jpg">
                  </a>
                </div>
              </div>
              <div class="col-img-item">
                <div class="articles context-menu-one" data-num="2" data-idx="">
                  <a title="untitled.jpg" data-lightbox="image-1" rel="group1" href="http://61.82.113.197:3000/monitoring_img/untitled.jpg">
                    <img class="img-fluid c-pointer lightbox-img" src="http://61.82.113.197:3000/monitoring_img/untitled.jpg">
                  </a>
                </div>
              </div>
              <div class="col-img-item">
                <div class="articles context-menu-one" data-num="3" data-idx="">
                  <a title="untitled.jpg" data-lightbox="image-1" rel="group1" href="http://61.82.113.197:3000/monitoring_img/untitled.jpg">
                    <img class="img-fluid c-pointer lightbox-img" src="http://61.82.113.197:3000/monitoring_img/untitled.jpg">
                  </a>
                </div>
              </div>
            </div>
          </div>
          <div class="card m-b-0">
            <div class="card-header">
              <div class="card-header-right">
                <i class="fas fa-chevron-down"></i>
                <i class="fas fa-chevron-up"></i>
              </div>
            </div>
            <div class="card-block table-border-style" id="cnt-info">
              <div class="table-responsive">
                <table class="table" id="modal-cnt">
                  <colgroup>
                    <col width="30%">
                    <col width="70%">
                  </colgroup>
                  <tbody>
                    <tr>
                      <th>게시물번호</th>
                      <td><p id="cnt_num"></p></td>
                    </tr>
                    <tr>
                      <th>OSP</th>
                      <td><p id="osp_sname">도파일</p></td>
                    </tr>
                    <tr>
                      <th>콘텐츠제목</th>
                      <td><p id="cnt_title"></p></td>
                    </tr>
                    <tr>
                      <th>제목</th>
                      <td><p id="title"><a href="" target="_blank"></a></p></td>
                    </tr>
                    <tr>
                      <th>판매금액</th>
                      <td><p id="cnt_price"></p></td>
                    </tr>
                    <tr>
                      <th>작성자</th>
                      <td><p id="cnt_writer"></p></td>
                    </tr>
                    <tr>
                      <th>용량</th>
                      <td><p id="cnt_vol"></p></td>
                    </tr>
                    <tr>
                      <th>카테고리</th>
                      <td><p id="cnt_cate"></p></td>
                    </tr>
                    <tr>
                      <th>파일명</th>
                      <td><p id="cnt_fname"></p></td>
                    </tr>
                    <tr>
                      <th>mcp</th>
                      <td><p id="cnt_mcp"></p></td>
                    </tr>
                    <tr>
                      <th>cp</th>
                      <td><p id="cnt_cp"></p></td>
                    </tr>
                    <tr>
                      <th>키워드</th>
                      <td><p id="k_title"></p></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="card m-b-0">
            <div class="card-block table-border-style">
              <div class="table-responsive">
                <table class="table table-columned table-striped" id="modal-cntList">
                  <thead>
                    <tr>
                      <th></th>
                      <th>포함검색어</th>
                      <th>제외검색어</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr id="inputKey">
                      <th scope="row" class="centerTh">입력</th>
                      <td>
                        <input type="text" class="form-control" id="pSearch">
                        <span class="messages"><p class="text-danger error m-b-0"></p></span>
                      </td>
                      <td>
                        <input type="text" class="form-control" id="dSearch">
                        <span class="messages"><p class="text-danger error m-b-0"></p></span>
                      </td>
                      <td>
                        <button class="btn btn-success btn-sm" id="insertKeywordBtn"><i class="fas fa-plus" style="margin-right:0"></i></button>
                        <input id="cntIdx_m" value="" type="hidden" />
                        <input name="oK_state" value="" type="hidden" class="form-control">
                        <input name="oK_method" value="" type="hidden" class="form-control">
                        <input name="oK_apply" value="" type="hidden" class="form-control">
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-4 col-right" id="defaultDetail">
          <div class="col-xs-12">
            <h4>게시물을 선택해주세요.</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
